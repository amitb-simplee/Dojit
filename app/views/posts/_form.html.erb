
<%= simple_form_for [topic, post] do |f| %>
  <%= render 'posts/error_messages', object: f.object %>
  <%= f.input :title, label_html: { class: 'form-control', placeholder: "Enter post title" } %>
  <%= f.input :body, label_html: { class: 'form-control', placeholder: "Enter post body" } %>
  <%= f.button :submit, label_html: { class: 'btn btn-success' }%>

<% end %>
