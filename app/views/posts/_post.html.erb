  <div class="media">
    <%= render partial: 'votes/voter', locals: { post: post } %>
    <div class="mediabody">
      <h4 class="mediaheading">
        <%= link_to (markdown post.title), [@topic, post] %>
      </h4>
      <small>
        submitted <%= time_ago_in_words(post.created_at) %> ago by
        <%= post.user.name %><br/>
        <%= post.comments.count %> Comments
      </small>
    </div>
  </div>